<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="agh.project.iot.iot_device.postActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:id="@+id/greenButton"
            android:layout_marginTop="38dp"
            android:background="@android:color/holo_green_dark"
            android:onClick="onGreenButton"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SEND"
            android:id="@+id/redButton"
            android:background="@android:color/holo_red_light"
            android:onClick="onRedButton"
            android:layout_alignTop="@+id/greenButton" android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SEND"
            android:id="@+id/blueButton"
            android:background="@android:color/holo_blue_dark"
            android:onClick="onBlueButton"
            android:layout_marginEnd="26dp" android:layout_alignTop="@+id/greenButton"
            android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inputText"
            android:hint="Input" android:textAlignment="center"
            android:singleLine="true"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/clearButton" android:layout_alignStart="@+id/clearButton"
            android:layout_alignEnd="@+id/clearButton"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logText"
            android:textAlignment="center"
            android:textSize="@dimen/abc_action_bar_content_inset_material" android:hint="MESSAGE LOGGER"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginBottom="27dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SEND TO ALL"
            android:id="@+id/allButton" android:background="@color/material_grey_600"
            android:onClick="onALLButton"
            android:layout_below="@+id/greenButton" android:layout_alignStart="@+id/greenButton"
            android:layout_marginTop="32dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CLEAR"
            android:id="@+id/clearButton" android:background="@android:color/holo_orange_dark"
            android:onClick="onClearButton"
            android:layout_below="@+id/allButton" android:layout_alignStart="@+id/allButton"
            android:layout_marginTop="28dp"/>
    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MovementToogleButton"
            android:id="@+id/movementButton"
            android:checked="false"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/inputText" android:layout_alignStart="@+id/inputText"/>
</RelativeLayout>
